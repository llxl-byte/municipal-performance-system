# 环境变量模板文件
# 📚 知识点：环境变量管理最佳实践

# ===========================================
# 数据库配置
# ===========================================
# PostgreSQL数据库连接字符串
# 格式: postgresql://用户名:密码@主机:端口/数据库名?schema=public
DATABASE_URL="postgresql://username:password@localhost:5432/municipal_performance?schema=public"

# ===========================================
# Redis缓存配置
# ===========================================
# Redis连接字符串
# 格式: redis://主机:端口 或 redis://用户名:密码@主机:端口
REDIS_URL="redis://localhost:6379"
# Redis密码（如果需要）
REDIS_PASSWORD=""

# ===========================================
# 服务器配置
# ===========================================
# 后端服务端口
PORT=8000
# 运行环境 (development/production/test)
NODE_ENV=development

# ===========================================
# 安全配置
# ===========================================
# CORS允许的源地址
CORS_ORIGIN="http://localhost:3000"
# JWT密钥（生产环境必须更改）
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# ===========================================
# 文件上传配置
# ===========================================
# 最大文件大小（字节）
MAX_FILE_SIZE=52428800  # 50MB
# 支持的文件格式
SUPPORTED_FORMATS=".xlsx,.xls"

# ===========================================
# 缓存配置
# ===========================================
# 缓存TTL（秒）
CACHE_TTL=300  # 5分钟
# 统计数据缓存TTL（秒）
STATS_CACHE_TTL=300  # 5分钟

# ===========================================
# 日志配置
# ===========================================
# 日志级别 (error/warn/info/debug)
LOG_LEVEL=info
# 日志文件路径
LOG_FILE="/var/log/municipal-performance/app.log"

# ===========================================
# 性能配置
# ===========================================
# 最大并发上传数
MAX_CONCURRENT_UPLOADS=10
# 数据库连接池大小
DB_POOL_SIZE=10

# ===========================================
# 监控配置
# ===========================================
# 健康检查间隔（毫秒）
HEALTH_CHECK_INTERVAL=30000  # 30秒
# 启用性能监控
ENABLE_METRICS=true

# ===========================================
# 前端配置（构建时使用）
# ===========================================
# API基础URL
VITE_API_BASE_URL=http://localhost:8000
# 应用标题
VITE_APP_TITLE=市政业绩管理系统
# 应用版本
VITE_APP_VERSION=1.0.0